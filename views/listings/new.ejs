<% layout("layouts/boilerplate") %>

<div class="form-container">
  <div class="form-header">
    <h1>Create New Listing</h1>
    <p>Add your property to attract guests from around the world</p>
  </div>

  <form method="POST" action="/listings" class="edit-form">
    <!-- Title Section -->
    <div class="form-section">
      <h3>Property Information</h3>
      <div class="form-group">
        <label for="title">Property Title</label>
        <input 
          type="text" 
          id="title"
          name="listing[title]" 
          class="form-control"
          placeholder="e.g., Cozy Beachfront Villa with Ocean Views"
          required
        />
      </div>
      
      <div class="form-group">
        <label for="description">Description</label>
        <textarea 
          id="description"
          name="listing[description]" 
          class="form-control textarea-large"
          placeholder="Describe your property, amenities, and what makes it special"
          rows="4"
          required
        ></textarea>
      </div>
    </div>

    <!-- Image Section -->
    <div class="form-section">
      <h3>Property Images</h3>
      <div class="form-group">
        <label for="image-url">Image URL</label>
        <input
          type="text"
          id="image-url"
          name="listing[image][url]"
          class="form-control"
          placeholder="https://example.com/property-image.jpg"
        />
        <small class="form-text">Provide a direct link to your property image</small>
      </div>
      
      <div class="form-group">
        <label for="image-filename">Image Filename (Optional)</label>
        <input
          type="text"
          id="image-filename"
          name="listing[image][filename]"
          class="form-control"
          placeholder="beach-villa.jpg"
        />
      </div>
    </div>

    <!-- Pricing Section -->
    <div class="form-section">
      <h3>Pricing</h3>
      <div class="form-group">
        <label for="price">Price per night (₹)</label>
        <div class="price-input-wrapper">
          <span class="currency-symbol">₹</span>
          <input
            type="number"
            id="price"
            name="listing[price]"
            class="form-control price-input"
            placeholder="2000"
            min="1"
            required
          />
        </div>
      </div>
    </div>

    <!-- Location Section -->
    <div class="form-section">
      <h3>Location</h3>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="country">Country</label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            class="form-control"
            placeholder="e.g., India"
            required
          />
        </div>
        <div class="form-group col-md-6">
          <label for="location">City/Area</label>
          <input
            type="text"
            id="location"
            name="listing[location]"
            class="form-control"
            placeholder="e.g., Goa, Mumbai, Delhi"
            required
          />
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-plus"></i>
        Create Listing
      </button>
      <a href="/listings" class="btn btn-secondary">
        <i class="fas fa-times"></i>
        Cancel
      </a>
    </div>
  </form>
</div>